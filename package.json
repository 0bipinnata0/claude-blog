{
  "name": "claude-blog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "bun run gen && ng serve",
    "build": "bun run gen && bun run gen-routes && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "new": "bun scripts/new-post.ts",
    "gen": "bun scripts/gen-index.ts && bun scripts/gen-sitemap.ts && bun scripts/gen-rss.ts",
    "gen-routes": "bun scripts/gen-routes.ts",
    "serve:ssr:claude-blog": "node dist/claude-blog/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "@angular/cdk": "^21.0.5",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "21.0.5",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.4",
    "canvas-confetti": "^1.9.4",
    "clipboard": "^2.0.11",
    "express": "^5.1.0",
    "fuse.js": "^7.1.0",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "ngx-markdown": "^21.0.1",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@cloudflare/workers-types": "^4.20260101.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@types/prismjs": "^1.26.5",
    "front-matter": "^4.0.2",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
